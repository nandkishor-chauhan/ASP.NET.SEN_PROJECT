<div class="py-2" dir="rtl">
    <div class="content-doc-heading">
        <div class="row">
            <div class="col-lg-3 mb-3">
                <div class="sidebar">
                    <div class="filter-section">
                        <div class="form-group row mb-2 align-items-center">
                            <div class="col-sm-2">
                                <button type="button" class="btn btn-danger btn-sm px-2 py-1">
                                    <i class="fa-solid fa-xmark"></i>
                                </button>
                            </div>
                            <div class="col-sm-10 text-center">
                                <label class="col-form-label text-danger fw-bold fs-5">معلومات الطلبة</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="row">
                    <div class="col-3 border rounded p-2">
                        <div class="d-flex justify-content-between">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="mode" id="radioLocked" checked>
                                <label class="col-form-label" for="radioLocked">مقيد</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="mode" id="radioSearch">
                                <label class="col-form-label" for="radioSearch">بحث</label>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-7 col-form-label pe-2"> تقييم المصدر :</label>
                            <div class="col-sm-5">
                                <span id="file-count" class="form-control">0</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-7 col-form-label pe-2"> تاريخ التقرير :</label>
                            <div class="col-sm-5">
                                <span type="text" id="grade" class="form-control"> </span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-4 border rounded p-2">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">ID :</label>
                            <div class="col-sm-10">
                                <input type="text" id="filter-qatar-id" class="form-control"
                                       oninput="if(this.value.length > 11) this.value = this.value.slice(0,11);" 
                                       disabled />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">ID :</label>
                            <div class="col-sm-10">
                                <span id="qatar-id" class="form-control"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label"> Division:</label>
                            <div class="col-sm-8">
                                <span id="division" class="form-control"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-5 border rounded p-2">
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label pe-2">اسم الطالب :</label>
                            <div class="col-sm-8">
                                <input type="text" id="filter-fullname" class="form-control" disabled/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label pe-2">اسم الطالب :</label>
                            <div class="col-sm-8">
                                <span id="student-fullname" class="form-control"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 col-form-label pe-2"> دعم المستوى:</label>
                            <div class="col-sm-8">
                                <span id="support-level" class="form-control"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="sidebar">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-start"> تقييم المصدر :</label>
                        <div class="col-sm-8">
                            <span id="report-source" class="form-control"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label text-start"> تاريخ التقرير :</label>
                        <div class="col-sm-8">
                            <input type="date" id="report-date" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <button id="" class="btn btn-primary">  Update </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content-doc-body py-2">
        <div class="row">
            <div class="col-lg-3 mb-3">     
                <div class="sidebar">
                    <div class="pager-box">
                        <button class="pager-btn" title="Last"><i class="bi bi-chevron-double-right"></i></button>
                        <button class="pager-btn" title="Next" onclick="nextStudent()">
                            <i class="bi bi-chevron-right"></i>
                         </button>

                        <span>of 22</span>
                        <input type="text" class="pager-input" value="1" readonly>
                        
                        <button class="pager-btn" title="Previous" onclick="prevStudent()">
                            <i class="bi bi-chevron-left"></i>
                        </button>
                        <button class="pager-btn" title="First"><i class="bi bi-chevron-double-left"></i></button>
                    </div>

                    <div class="student-table">
                        <table class="table table-bordered table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>سر</th>
                                     <th>اسم الطالب</th>
                                </tr>
                            </thead>
                            <tbody id="student-table-body">
                                <!-- rows will be injected here -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">

                <div class="container mt-4">
                    <button onclick="window.print()" class="btn btn-primary me-2">Print</button>
                    <button onclick="saveAsPDF()" class="btn btn-success">Save</button>
                </div>

                <div class="container text-center mb-2 mt-2">
                    <h2 class="fw-bold text-success text-decoration-underline">شهادة دراسية</h2>
                </div>
                

                <div id="file-details" class="container">
                </div>

                <div class="card border shadow-sm mt-lg-5">
                    <div class="card-body">
                        <textarea id="case-description" class="col-sm-12 h-100" readonly></textarea>

                        <textarea id="instr-w-st-field" class="col-sm-12 h-100" readonly hidden></textarea>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 mb-3">
                <div class="sidebar h-75">
                    <div class="filter-section">
                        <div class="form-group row mb-2 align-items-center">
                            <div class="col-sm-10 text-center">
                                <input class="col-form-label" placeholder="Search by Name" />
                            </div>
                        </div>
                    </div>
                    <div class="student-table">
                        <table class="table table-bordered table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>سر</th>
                                    <th> اسم المف</th>
                                    <th> تاريخ التحرير</th>
                                </tr>
                            </thead>
                            <tbody id="student-doc-table">
                                <!-- rows will be injected here -->
                            </tbody>
                        </table>
                    </div>

                </div>

                <div class="container mt-3">
                    <div class="row g-1">
                        <div class="col-3">
                            <button id="view-file" class="btn btn-primary w-100">عرض الملف</button>
                        </div>
                        <div class="col-3">
                            <button id="open-file" class="btn btn-secondary w-100">ملف مفتوح</button>
                        </div>
                        <div class="col-3">
                            <button id="delete-file" class="btn btn-danger w-100">حذف الملف</button>
                        </div>

                        <div class="col-3">
                            <button id="download-file" class="btn btn-info w-100">تنزيل الملف</button>
                        </div>
                        <div class="col-3">
                            <button id="open-folder" class="btn btn-warning w-100">مجلد مفتوح</button>
                        </div>
                        <div class="col-3">
                            <button id="edit-case-description" class="btn btn-secondary w-100"> حالة العرض</button>
                        </div>

                        <div class="col-3">
                            <button id="edit-instr-field" class="btn btn-light w-100">تعليمات التعامل</button>
                        </div>
                        <div class="col-3">
                            <button id="learning-resource" class="btn btn-warning w-100">موارد التعلم</button>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/DocumentController.js"></script>
}
