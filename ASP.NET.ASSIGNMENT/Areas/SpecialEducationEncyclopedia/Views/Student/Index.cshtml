<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>بيانات الطلاب</title>
    <style>
        .green-box {
            background: #00b050;
            color: #fff;
            padding: 6px;
            margin-bottom: 10px;
            text-align: center;
            font-weight: bold;
        }

        .sidebar {
            border: 1px solid #ccc;
            background: #fff;
            padding: 8px;
        }

            .sidebar h6 {
                font-size: 40px;
                margin-bottom: 5px;
            }

        .filter-section {
            border: 1px solid #ccc;
            padding: 8px;
            margin-bottom: 10px;
            background: #fdfdfd;
        }

            .filter-section label {
                margin-left: 10px;
            }

        .student-table {
            max-height: 350px;
            overflow-y: auto;
            border: 1px solid #ccc;
            background: #fff;
        }

            .student-table table {
                font-size: 14px;
            }

        .footer-buttons button {
            min-width: 120px;
        }
    </style>
</head>
<body>
    <div class="py-2">

        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 mb-3">
                <div class="sidebar">
                    <!-- Filters -->
                    <div class="filter-section">
                        <div class="row">
                            <div class="col-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                                    <label class="form-check-label text-danger" for="flexRadioDefault1">
                                        غير مقيد بالدعم
                                    </label>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                                    <label class="form-check-label" for="flexRadioDefault2">
                                        مقيد بالدعم
                                    </label>
                                </div>
                            </div>
                            <div class="col-4">
                                <label>
                                    : حالة القيد
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="filter-section">
                        <div class="row">
                            <div class="col-8">
                                <input type="checkbox" id="status1"> <label for="status1">1</label>
                                <input type="checkbox" id="status2"> <label for="status2">2</label>
                                <input type="checkbox" id="status3"> <label for="status3">3</label>
                                <input type="checkbox" id="statusAll"> <label for="statusAll">All</label>
                            </div>
                            <div class="col-4">
                                <label>
                                    : مستوى الدعم
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="filter-section">
                        <div class="row">
                            <div class="col-8">
                                <input type="checkbox" id="support7"> <label for="support7">7</label>
                                <input type="checkbox" id="support8"> <label for="support8">8</label>
                                <input type="checkbox" id="support9"> <label for="support9">9</label>
                                <input type="checkbox" id="supportAll"> <label for="supportAll">All</label>
                            </div>
                            <div class="col-4">
                                <label>
                                    : الصف
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mb-2">
                        <button class="btn btn-success w-100">تحديث البيانات</button>
                    </div>

                    <!-- Student list -->
                    <div class="student-table">
                        <table class="table table-bordered table-sm mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>الجنسية</th>
                                    <th>اسم الطالب</th>
                                    <th>سر</th>
                                </tr>
                            </thead>
                            <tbody id="student-table-body">
                                <!-- rows will be injected here -->
                            </tbody>
                        </table>
                    </div>

                    <div class="text-center mt-2 text-danger">
                        عدد الطلاب: <strong>22</strong>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-lg-9">
                <div class="content">
                    <div class="content-heading">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 id="student-fullname"></h4>
                            </div>
                        </div>
                    </div>

                    <div class="content-body">
                        <form method="post" enctype="multipart/form-data">
                            @* <input asp-for="ImageUrl" hidden /> *@

                            <!-- Address Information -->
                            <div class="row">
                                <div class="col-4 border rounded p-3 mb-3" dir="rtl">
                                    <div class="form-group row mb-2">
                                        <label class="col-sm-12 col-form-label text-end pe-5">بيانات العنوان :</label>
                                    </div>
                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start">المدينة:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="student-city" class="form-control" placeholder="أدخل اسم المدينة" />
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start">المنطقة:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="student-zone" class="form-control" placeholder="أدخل المنطقة" />
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start">رقم الشارع:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="student-street" class="form-control" placeholder="أدخل رقم الشارع" />
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start">رقم المنزل:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="student-home" class="form-control" placeholder="أدخل رقم المنزل" />
                                        </div>
                                    </div>
                                </div>

                                @*  contact Information *@
                                <div class="col-4 border rounded p-3 mb-3" dir="rtl">
                                    <div class="form-group row mb-2">
                                        <label class="col-sm-12 col-form-label text-end pe-5">بيانات التواصل :</label>
                                    </div>
                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start">جوال الأب:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="father-phone" class="form-control" placeholder="8584854485" />
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start">جوال الأم:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="mother-phone" class="form-control" placeholder="5415485454" />
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start"> جوال العم:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="uncle-phone" class="form-control" placeholder="899545489" />
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start">جوال أخر:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="other-phone" class="form-control" placeholder="545645645" />
                                        </div>
                                    </div>
                                </div>

                                <!-- Personal Information -->
                                <div class="col-4 border rounded p-3 mb-3" dir="rtl">
                                    <div class="form-group row mb-2">
                                        <label class="col-sm-12 col-form-label text-end pe-5">البيانات الشخصية:</label>
                                    </div>
                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start">الرقم الشخصي:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="qatar-id" class="form-control" placeholder="121" />
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start">الأسم الأول:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="first-name" class="form-control" placeholder="ABC" />
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start"> اسم الأب:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="last-name" class="form-control" placeholder="Last" />
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label class="col-sm-4 col-form-label text-start"> الجنسية:</label>
                                        <div class="col-sm-8">
                                            <input type="text" id="nationality" class="form-control" placeholder="NID" />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-4 col-form-label text-start"> الصف:</label>
                                        <div class="col-sm-3">
                                            <input type="text" id="grade" class="form-control" placeholder="7" />
                                        </div>

                                        <label class="col-sm-2 col-form-label text-start"> الشعبة:</label>
                                        <div class="col-sm-3">
                                            <input type="text" id="division" class="form-control" placeholder="3" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @*   level *@

                            <div class="" dir="rtl">
                                <div class="content-body mb-3 border shadow-sm">
                                    <div class="card-header bg-light fw-bold">
                                        حالة الملف
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <div class="form-group row">
                                                    <label class="col-sm-5 col-form-label"> مستوى الدعم:</label>
                                                    <div class="col-sm-6">
                                                        <input type="text" id="support-level" class="form-control" placeholder="3" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group row">
                                                    <label class="col-sm-8 col-form-label text-danger text-start">  مستوى الدعم السابق:</label>
                                                    <div class="col-sm-4">
                                                        <input type="text" id="previous-support-level" class="form-control" placeholder="2" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group row">
                                                    <label class="col-sm-4 col-form-label text-danger text-start">حالة القيد:</label>
                                                    <div class="col-sm-8">
                                                        <input type="text" id="entry-status" class="form-control" placeholder="قيد بالدعم" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label text-danger"> المدرسة السابق:</label>
                                            <div class="col-sm-6">
                                                <input type="text" id="former-school" class="form-control" placeholder="القادسية الابتدائية للبنين" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="content-body mb-3 border shadow-sm">
                                    <div class="card-header bg-light fw-bold">
                                        البيانات الصحية
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <div class="form-group row">
                                                    <label class="col-sm-5 col-form-label">تاريخ الميلاد :</label>
                                                    <div class="col-sm-7">
                                                        <input type="text" id="date-of-birth" class="form-control" placeholder="30/01/2009" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group row">
                                                    <label class="col-sm-5 col-form-label text-start"> تاريخ دخول الدعم :</label>
                                                    <div class="col-sm-7">
                                                        <input type="text" id="date-of-registration" class="form-control" placeholder="07/05/2008" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group row">
                                                    <label class="col-sm-4 col-form-label text-start">تاريخ التقييم :</label>
                                                    <div class="col-sm-8">
                                                        <input type="text" id="report-date" class="form-control" placeholder="09/02/2015" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-2">
                                                <div class="form-group row">
                                                    <label class="col-sm-4 col-form-label text-start"> شدة :</label>
                                                    <div class="col-sm-8">
                                                        <input type="text" id="severity" class="form-control" placeholder="واضح" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-3">
                                                <div class="form-group row">
                                                    <label class="col-sm-5 col-form-label">الرقم الصحي :</label>
                                                    <div class="col-sm-7">
                                                        <input type="text" id="health-number" class="form-control" placeholder="HC77083385" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-4">
                                                <div class="form-group row">
                                                    <label class="col-sm-4 col-form-label text-start"> التشخيص :</label>
                                                    <div class="col-sm-8">
                                                        <input type="text" id="diagnosis" class="form-control" placeholder="الإعاقة الذهنية ومتلازماتها" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="form-group row">
                                                    <label class="col-sm-4 col-form-label text-start">نوع الإعاقة  :</label>
                                                    <div class="col-sm-8">
                                                        <input type="text" id="type-of-disability" class="form-control text-danger" placeholder="إعاقة ذهنية" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-2">
                                                <div class="form-group row">
                                                    <label class="col-sm-4 col-form-label text-start">IQ :</label>
                                                    <div class="col-sm-8">
                                                        <input type="text" id="iq" class="form-control" placeholder="92" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-sm-3">
                                                <div class="form-group row">
                                                    <label class="col-sm-5 col-form-label">الحالة :</label>
                                                    <div class="col-sm-7">
                                                        <input type="text" id="stat" class="form-control" placeholder="بسيط" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label text-start"> مصدر التقييم  :</label>
                                                    <div class="col-sm-9">
                                                        <input type="text" id="report-source" class="form-control" placeholder="مركز رؤى للتقييم" />
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="card mb-3 border shadow-sm">
                                    <div class="card-header bg-light fw-bold">
                                        الوصف حسب التقييم
                                    </div>
                                    <div class="card-body">
                                        <textarea id="case-description" class="col-sm-12 h-100"></textarea>
                                    </div>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>

                <!-- Footer Buttons -->
                <div class="d-flex flex-wrap gap-2 footer-buttons mt-3">
                    <button class="btn btn-primary">جديد</button>
                    <button class="btn btn-warning">تعديل</button>
                    <button class="btn btn-danger">حذف</button>
                    <button class="btn btn-success">تحديث الملفات</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/StudentController.js"></script>
    }
</body>
</html>
